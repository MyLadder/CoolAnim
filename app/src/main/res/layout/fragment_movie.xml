<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#99c2c2c2"/>

    <ImageView
        android:id="@+id/imageViewBar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagebar"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movieImageView"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/movieImageView"
        android:text="大话西游3"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/movieImageView"
        android:layout_width="@dimen/movie_image_width"
        android:layout_height="@dimen/movie_image_height"
        android:layout_marginLeft="@dimen/movie_image_marginLeft"
        android:layout_marginTop="@dimen/movie_image_marginTop"
        android:scaleType="centerCrop"
        android:src="@drawable/movie"
        android:visibility="invisible"/>

</RelativeLayout>